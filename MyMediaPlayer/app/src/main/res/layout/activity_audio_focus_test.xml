<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textSize="16sp" />

        <!-- 媒体音频 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="媒体音频"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media 1 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media 1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnMedia1Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnMedia1Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnMedia1Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- Media 2 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media 2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnMedia2Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnMedia2Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnMedia2Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- System Sound 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnSystemLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnSystemOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnSystemStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- Nav 1 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nav 1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnNav1Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnNav1Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnNav1Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- Nav 2 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nav 2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnNav2Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnNav2Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnNav2Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- 安全提示音 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="安全提示音"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PDC 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDC"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnPDCLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnPDCOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnPDCStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- EXW 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXW"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEXWLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnEXWOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnEXWStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- Turn Light 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn Light"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnTurnLightLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnTurnLightOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnTurnLightStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- 车辆状态音 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="车辆状态音"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Vehicle Status 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Status"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnVehicleStatusLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnVehicleStatusOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnVehicleStatusStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- VR音频 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="VR音频"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- VR1 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VR1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnVR1Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnVR1Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnVR1Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- VR2 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VR2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnVR2Loop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnVR2Once"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnVR2Stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- 电话音频 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="电话音频"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Call Ring 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Ring"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnCallRingLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnCallRingOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnCallRingStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>

            <!-- Call 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnCallLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnCallOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnCallStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- 闹钟音频 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="闹钟音频"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Alarm 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnAlarmLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnAlarmOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnAlarmStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>

        <!-- 紧急音 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="紧急音"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Emergency 控制组 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnEmergencyLoop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="循环" />

                <Button
                    android:id="@+id/btnEmergencyOnce"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="单次" />

                <Button
                    android:id="@+id/btnEmergencyStop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="停止" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>